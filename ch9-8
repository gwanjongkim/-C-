#include <stdio.h>
#include <stdlib.h>
#include <time.h>
int show_digit(int x) {
	static int count;
	count += 1;
	if (x < 10) {
		
		return count;
	}
	
	return show_digit(x / 10);
}

int main(void) {
	
	int x;
	printf("input iteger: ");
	scanf_s("%d", &x);
	printf("num of digit: %d", show_digit(x));

}
