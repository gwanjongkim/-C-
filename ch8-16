#include <stdio.h>
#include <math.h>

double factorial(int n) {
	long long result =1;
	for (int i = 1; i <= n; i++) {
		result *= i;
	}
	return result;
}

int main(void) {
	int count;
	double oiler = 1;
	scanf_s("%d", &count);
	for (int i = 1; i <= count;i++) {
		oiler += (1 / factorial(i));
	}
	printf("%lf", oiler);
}
