#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define SIZE 10
#define ROW 10
#define COL 3

double avg(int arr[]) {
	double sum = 0;
	for (int i = 0; i < SIZE; i++) {
		sum +=(double) arr[i];
	}
	return sum / SIZE;
}

double standard_deviation(int arr[]) {
	double average = avg(arr);
	double sum = 0;
	for (int i = 0; i < SIZE; i++) {
		sum += (average - arr[i]) * (average - arr[i]);
	}
	return sum / SIZE;
}

int main(void) {
	int arr[SIZE];
	srand((unsigned)time(NULL));
	for(int i = 0; i < SIZE; i++){
		arr[i] = (double)rand();
	}
	printf("average is %lf\n", avg(arr));
	printf("standard deviation is %lf\n", standard_deviation(arr));
	
	
}
