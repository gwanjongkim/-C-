#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define SIZE 10
#define ROW 3
#define COL 5


int main(void) {
	int arr[ROW][COL] = { {12,56,32,16,98},{99,56,34,41,3},{65,3,87,78,21} };
	
	for (int i = 0; i < ROW; i++) {
		int row_sum = 0;
		for(int j = 0; j < COL; j++){
			row_sum += arr[i][j];
		}
		printf("sum of %d row is %d\n", i, row_sum);
	}

	for (int i = 0; i < COL; i++) {
		int col_sum = 0;
		for (int j = 0; j < ROW ; j++) {
			col_sum += arr[j][i];
		}
		printf("sum of %d col is %d\n", i, col_sum);
	}
}
