#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define SIZE 10
#define ROW 10
#define COL 3

int main(void) {
	int binary[32];
	int n;
	int cnt = 0;
	scanf_s("%d", &n);
	for (int i = 0; i < 32 && n > 0; i++) {
		binary[i] = n % 2;
		n /= 2;
		cnt += 1;
	}
	for (int i = cnt -1; i >= 0; i--) {
		printf("%d", binary[i]);
	}
	for (int i = 32 - 1; i >= 0; i--) {
		if (binary[i] == 0 || binary[i] == 1) {
			printf("%d", binary[i]);
		}
	}
}
