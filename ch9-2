#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void get_dice_face(int dice_face) {
	static int one = 0;
	static int two = 0;
	static int three = 0;
	static int four = 0;
	static int five = 0;
	static int six = 0;
	static int count = 0;
	count += 1;
	switch (dice_face)
	{
	case 1: one += 1; break;
	case 2: two += 1; break;
	case 3: three += 1; break;
	case 4: four += 1; break;
	case 5: five += 1; break;
	case 6:six += 1; break;

	default:
		break;
	}
	if (count == 100) {
		printf("1 -> %d\n", one);
		printf("2 -> %d\n", two);
		printf("3 -> %d\n", three);
		printf("4 -> %d\n", four);
		printf("5 -> %d\n", five);
		printf("6 -> %d\n", six);
	}
}

int main(void) {
	srand((unsigned)time(NULL));
	for (int i = 0; i < 100; i++) {
		int dice = rand() % 6 + 1;
		get_dice_face(dice);
	}
	
}
